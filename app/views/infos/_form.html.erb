<%= simple_form_for(@info) do |f| %>

<%= f.error_messages %>

	<%= f.label :country_tokens, 'Pays' %>
	<%= f.text_field :country_tokens %><br />
	
	<!-- <%= f.label :instant_places, 'Ville' %> -->
	<!-- <%= f.text_field :instant_places %><br /> -->

	<%= f.input :age, :prompt => { :year => '- Year -', :month => "- Month -", :day => "- Day -"}, :start_year => Date.today.year - 111, :end_year => Date.today.year - 10 -%>

	<%= f.input :taille, :prompt => '- cm -', :collection => 100..220, :include_blank => false, :label => "Height" -%>
	
	<%= f.input :sexe, :as => :radio, :label => "Sex", :collection => [["Male", true], ["Female", false]]-%>
	
	<%= f.button :submit, 'Calculation' -%>
	
	<%= debug(@Info) %>
	
<%end%>	
