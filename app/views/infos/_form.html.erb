<%= simple_form_for(@info) do |f| %>

  <%= f.error_messages %>

	<%= f.datetime_select :age, :prompt => { :year => 'Year'}, :start_year => Date.today.year, :end_year => Date.today.year + 2 %>

	<%= f.input :taille, :collection => 100..220, :include_blank => false, :label => "Height (cm) "%>
	
	<%= f.input :sexe, :as => :radio, :label => "Sex", :collection => [["Homme", true], ["Femme", false]]%>
	
	<%= f.button :submit, 'Calculation' %>
	
<%end%>
	
	
	

